extend layouts/layout.pug

block title
  title 엄준식

block content
  section
    .table-section
      h1= boardTitle
      - if(posts.length == 0)
        h1.empty 등록된 글이 없습니다
      - else
        p#count(count=`${count}`) 전체글: #{count} 개
        p#point 현재위치: #{page}page / #{Math.ceil(count/10)}page
        table
          thead
            td 번호
            td 제목
            td 작성자
            td 날짜
            td 추천
          tbody
            for post in posts
              tr
                td= post.id
                td
                  a(href=`/post/${post.id}`)=post.title
                td= post.owner
                td= post.last_edit
                td= post.like
      .right
        - if(user.gm === 1)
          a(href=`/write/${realTitle}` title="새로운 글 작성") <i class="fa fa-pen"></i>
    .board-bottom
      .center
        a(href="/news/notice/1") 1

block js
  script.
    const count = $('#count').attr('count');